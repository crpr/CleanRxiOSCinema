platform :ios, "8.0"

target 'CleanRxiOSCinema' do
  use_frameworks!

  plugin 'cocoapods-keys', {
    :project => "CleanRxiOSCinema",
    :keys => [
      "CinemaApiKey"
    ]}

  # Pods for Cinema
   pod 'RxSwift'
   pod 'Moya-ObjectMapper'
   pod 'Kingfisher'
   pod 'Reusable'
   pod 'XCGLogger', '~> 4.0.0'
   pod 'Moya'
   pod 'Swinject', '2.0.0'
   pod 'QuickShotUtils', :git => 'https://github.com/pmlbrito/QuickShotUtils.git'
   pod 'SnapKit'

end

